<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.debvisual">

    <LinearLayout style="@style/campos" >

        <LinearLayout style="@style/campo" >

            <TextView style="@style/campo_nombre"
                android:text="Nombre" />

            <EditText style="@style/campo_texto"
                android:id="@+id/nombre"
                android:text="Nombre" />

        </LinearLayout>

        <LinearLayout style="@style/campo" >

            <TextView style="@style/campo_nombre"
                android:text="Foto" />

            <EditText style="@style/campo_texto"
                android:id="@+id/foto"
                android:text="Foto" />

        </LinearLayout>

        <LinearLayout style="@style/campos_botones" >

            <Button style="@style/boton"
                android:text="Aceptar"
                android:id="@+id/button" />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
